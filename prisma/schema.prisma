generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  email        String   @unique
  passwordHash String
  fcmTokens    String[]
  createdAt    DateTime @default(now())

  devices Device[]
  plants  Plant[]
}

model Device {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  ownerId      String   @db.ObjectId
  owner        User     @relation(fields: [ownerId], references: [id])
  secret       String
  threshold    Int?
  lastMoisture Int?
  pumpOn       Boolean?
  lastSeen     DateTime?
  updatedAt    DateTime @updatedAt

  telemetry Telemetry[]
  commands  Command[]
}

model Telemetry {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  deviceId String   @db.ObjectId
  device   Device   @relation(fields: [deviceId], references: [id])
  at       DateTime
  moisture Int
  pumpOn   Boolean?
}

model Command {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  deviceId String   @db.ObjectId
  device   Device   @relation(fields: [deviceId], references: [id])
  action   String
  state    Boolean?
  value    Json?
  status   String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Plant {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  name      String
  species   String?
  notes     String?
  deviceId  String   @db.ObjectId
  threshold Int?
  createdAt DateTime @default(now())
}
